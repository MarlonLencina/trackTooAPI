{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
   "baseUrl": "./src",
   "resolveJsonModule": true,
    "outDir": "./dist",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shated/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
